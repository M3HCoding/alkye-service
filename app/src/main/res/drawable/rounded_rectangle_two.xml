<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Set the color of the rectangle -->
    <solid android:color="#ffffff" />

    <!-- Set the corner radius to create rounded corners -->
    <corners android:radius="10dp" />

    <!-- Set the padding inside the shape (optional) -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

    <!-- Optionally, set a stroke for the border -->
    <stroke
        android:width="2dp"
        android:color="#000000" />
</shape>
