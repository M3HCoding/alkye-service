<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Set the color of the rectangle -->
    <solid android:color="#ffffff" />

    <!-- Set the corner radius to create rounded corners -->
    <corners android:radius="20dp" />

    <!-- Set the padding inside the shape (optional) -->
    <padding
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp" />

    <!-- Optionally, set a stroke for the border -->
    <stroke
        android:width="0dp"
        android:color="#ffffff" />
</shape>
